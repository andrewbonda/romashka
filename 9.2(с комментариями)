#include <iostream> // Подключение библиотеки для работы с вводом-выводом
#include <fstream>  // Подключение библиотеки для работы с файлами
#include <limits>   // Подключение библиотеки для работы с пределами значений
using namespace std; // Использование пространства имен std

/**
 * Функция MinMax: находит минимальное и максимальное значения в файле.
 * @param S - имя файла
 * @param minVal - ссылка на переменную для хранения минимального значения
 * @param maxVal - ссылка на переменную для хранения максимального значения
 */
void MinMax(const string& S, int& minVal, int& maxVal) {
    ifstream file(S); // Открываем файл для чтения

    if (!file) { // Проверяем, успешно ли открылся файл
        cerr << "Ошибка открытия файла: " << S << endl; // Выводим сообщение об ошибке
        minVal = 0; // Устанавливаем minVal и maxVal в 0, если файл не существует
        maxVal = 0;
        return; // Выходим из функции
    }

    bool First_value = true; // Флаг для проверки первой прочитанной величины
    int number; // Переменная для временного хранения числа из файла

    // Цикл чтения чисел из файла
    while (file >> number) { // Пока можно считать число из файла
        if (First_value) { // Если это первое значение
            minVal = number; // Устанавливаем его как минимальное
            maxVal = number; // Устанавливаем его как максимальное
            First_value = false; // Сбрасываем флаг первой величины
        } else { // Для остальных значений
            if (number < minVal) { // Если текущее число меньше минимального
                minVal = number; // Обновляем минимальное значение
            }
            if (number > maxVal) { // Если текущее число больше максимального
                maxVal = number; // Обновляем максимальное значение
            }
        }
    }

    file.close(); // Закрываем файл после чтения
}

int main() {
    string S = "s.txt"; // Имя входного файла
    int minValue, maxValue; // Переменные для хранения минимального и максимального значений

    MinMax(S, minValue, maxValue); // Вызываем функцию для поиска минимума и максимума

    // Проверяем, был ли файл пустым или не существовал
    if (minValue == 0 && maxValue == 0) { 
        cout << "Файл пуст или не существует." << endl; // Выводим сообщение об ошибке
    } else { // Если файл содержит данные
        cout << "Минимальное значение: " << minValue << endl; // Выводим минимальное значение
        cout << "Максимальное значение: " << maxValue << endl; // Выводим максимальное значение
    }

    return 0; // Успешное завершение программы
}
